# Set User specific aliases
alias timestamp='date -d "$(date -u)" "+%s"'
alias sdate='date -u "+%Y%m%d"'
alias rm='rm -i'
alias mv='mv -i'
alias df='df -h'
alias l='ls --color=none'
alias p='cd -'
alias ls='ls -h --color'
alias less='less -RMX'
